@model SHPTH.Models.Cloth

@{
    ViewData["Title"] = "Details";
}


<div class="prod-title-div" style="margin-top:30px;">
    <h1 class="prod-title">@Model.Brand</h1>
</div>


<div class="container-details">


    <div class="image">
        <img src="@Model.IMGURL" width="350px" alt="@Model.Brand" />
    </div>
    <div class="vertical">
    </div>
    <div class="product-details">
        <div style="position:relative;">
            <h1>   @Html.DisplayFor(model => model.Price) Kč</h1>
            <div style=" position:absolute; top:-10px; right:-15px;  background-color:yellow; width:80px;"><p style=" margin:0 3px;  font-size:10px; color:black;">FREE SHEEPING</p></div>
        </div>
       


        <div style="background-color:#f7f7f7; border-top:2px solid darkgray; border-bottom:2px solid darkgray; position:relative;">
            <h4 style="margin:10px 10px;">Product details</h4>
            <ul style=" list-style:none; margin:10px 10px; margin-right:38px;">

                <li>
                    Category:  @{

                        switch (Model.CloId)
                        {
                            case 51:
                                <h8>Hoodie</h8>

                                break;
                            case 52:
                                <h8>T-shirt</h8>
                                break;
                            case 53:
                                <h8>Trousers</h8>
                                break;
                            case 54:
                                <h8>"Shorts"</h8>
                                break;
                            case 55:
                                <h8>Shooes</h8>
                                break;

                        }



                    }
                </li>
                <li>
                    Size:  @{

                        switch (Model.SizeId)
                        {
                            case 1:
                                <h8>S</h8>

                                break;
                            case 2:
                                <h8>M</h8>
                                break;
                            case 3:
                                <h8>L</h8>
                                break;
                            case 4:
                                <h8>"XL"</h8>
                                break;
                            case 5:
                                <h8>XXL</h8>
                                break;

                        }



                    }
                </li>
                <li>
                    Type:  @Model.GenderSeparation
                </li>
                


            </ul>
            
            @if (User.IsInRole("Admin"))
            {
                
            }


            

        </div>
        <div class="lol" style=" text-align:center; border-bottom:2px solid darkgray; ">
            <a class="add-cart" asp-controller="Orders" asp-action="AddToShopingCart" asp-route-id="@Model.Id">Add to cart</a>
        </div>
        
        <a style="color:black; text-decoration:none; position:absolute; bottom:200px; right:50px;" asp-action="WelcomePage">Back to List</a>
    </div>
   
    


</div>




